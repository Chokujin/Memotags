
<div class="container-fluid" style="background-color:#EDF7FF; height:800px; border: 1px solid #CC0000;">
  <ul class="list-unstyled">
    <% memos.each do |memo| %>
      <li class="media mb-3">
        <div class="media-body">
          <div>
            <p class="mb-0"><%= memo.content %></p>
          </div>
        </div>
      </li>
    <% end %>
    <%= paginate memos %>
  </ul> 
</div>