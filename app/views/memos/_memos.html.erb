
<div class="container-fluid" style="background-color:#EDF7FF; height:800px; border: 1px solid #CC0000;">
  <ul class="list-unstyled">
    <% memos.each do |memo| %>
      <li class="media mb-3">
        <div class="media-body">
                <%= link_to memo.content, memo, class:"btn btn-primary" %>
        </div>
      </li>
    <% end %>
    <%= paginate memos %>
  </ul> 
</div>